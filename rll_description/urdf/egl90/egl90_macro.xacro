<?xml version="1.0"?>
<robot name="egl90" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="finger_mass" value="0.1" />

  <xacro:macro name="egl90" params="parent prefix *origin">

    <joint name="gripper_adapter_joint" type="fixed">
      <parent link="${parent}" />
      <child link="${prefix}gripper_adapter" />
      <xacro:insert_block name="origin"/>
    </joint>
    <link name="${prefix}gripper_adapter">
      <visual>
        <origin xyz="0 0 0" rpy="${180 * PI / 180} 0 ${-90 * PI / 180}"/>
        <geometry>
          <mesh filename="package://rll_description/meshes/egl90/visual/gripper_adapter.dae" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 -0.015" rpy="${180 * PI / 180} 0 ${-90 * PI / 180}"/>
        <geometry>
          <box size="0.09 0.07 0.03"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}mount" type="fixed">
      <parent link="${prefix}gripper_adapter"/>
      <child link="${prefix}gripper_base"/>
      <origin xyz="0 0.055 0" rpy="${90 * PI / 180} 0 ${180 * PI / 180}"/>
    </joint>
    <link name="${prefix}gripper_base">
      <inertial>
        <origin xyz="0.055 0 0" rpy="${90 * PI / 180} 0 ${90 * PI / 180}"/>
        <mass value="0.3"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0002" iyz="0" izz="0.0001"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://rll_description/meshes/egl90/visual/gripper_base.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0.055 -0.025" rpy="0 0 0"/>
        <geometry>
          <box size="0.09 0.108 0.18"/>
        </geometry>
      </collision>
    </link>

  </xacro:macro>


  <xacro:macro name="egl90-jaws" params="prefix min max *mesh">

    <joint name="egl_position" type="prismatic">
      <parent link="${prefix}gripper_base"/>
      <child link="${prefix}gripper_finger_right"/>
      <origin xyz="-0.013 0.1063 -0.1" rpy="0 ${180 * PI / 180} 0"/>
      <axis xyz="1 0 0"/>
      <limit effort="100.0" lower="${min}" upper="${max}" velocity="100.0"/>
    </joint>
    <link name="${prefix}gripper_finger_right">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="${finger_mass}"/>
        <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.0002" iyz="0" izz="0.0002"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <xacro:insert_block name="mesh"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <xacro:insert_block name="mesh"/>
        </geometry>
      </collision>
    </link>

    <joint name="egl_position_mimic" type="prismatic">
      <parent link="${prefix}gripper_base"/>
      <child link="${prefix}gripper_finger_left"/>
      <origin xyz="0.013 0.1063 -0.02" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit effort="100.0" lower="${min}" upper="${max}" velocity="100.0"/>
    </joint>
    <link name="${prefix}gripper_finger_left">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="${finger_mass}"/>
        <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.0002" iyz="0" izz="0.0002"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <xacro:insert_block name="mesh"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <xacro:insert_block name="mesh"/>
        </geometry>
      </collision>
    </link>

  </xacro:macro>

</robot>
